@model NhaTro.Application.DTOs.CreateUtilityReadingDto

@{
    ViewData["Title"] = "Thêm chỉ số mới";
}

<div class="container-fluid">
    <h2>Thêm chỉ số mới</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="RoomId" class="control-label"></label>
                    <select asp-for="RoomId" class="form-control" asp-items="ViewBag.Rooms"></select>
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReadingDate" class="control-label"></label>
                    <input asp-for="ReadingDate" class="form-control" type="date" />
                    <span asp-validation-for="ReadingDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UtilityId" class="control-label">Mã tiện ích (1: Điện, 2: Nước)</label>
                    <input asp-for="UtilityId" class="form-control" />
                    <span asp-validation-for="UtilityId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReadingValue" class="control-label">helo</label>
                    <input asp-for="ReadingValue" class="form-control" />
                    <span asp-validation-for="ReadingValue" class="text-danger"></span>
                </div>

                <div class="form-group d-flex mt-4">
                    <button type="submit" class="btn btn-primary me-2">Lưu</button>
                    <a asp-action="Index" asp-route-motelId="@ViewBag.MotelId" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}