@model NhaTro.Application.DTOs.RoomDto
@{
    ViewData["Title"] = "Sửa Phòng";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}

<h2>Sửa Phòng</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoomId" />
    <input type="hidden" asp-for="MotelId" />
    <div class="mb-3">
        <label asp-for="RoomName" class="form-label"></label>
        <input asp-for="RoomName" class="form-control" />
        <span asp-validation-for="RoomName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RentalPrice" class="form-label"></label>
        <input asp-for="RentalPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="RentalPrice" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Area" class="form-label"></label>
        <input asp-for="Area" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RoomStatusId" class="form-label">Trạng thái</label>
        <select asp-for="RoomStatusId" class="form-select" asp-items="@ViewBag.RoomStatuses"></select>
        <span asp-validation-for="RoomStatusId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("form").validate({
                rules: {
                    RoomName: { required: true },
                    RentalPrice: { required: true, min: 0 },
                    Area: { min: 0 },
                    RoomStatusId: { required: true }
                },
                messages: {
                    RoomName: { required: "Vui lòng nhập tên phòng" },
                    RentalPrice: { required: "Vui lòng nhập giá thuê", min: "Giá thuê phải lớn hơn 0" },
                    Area: { min: "Diện tích phải lớn hơn 0" },
                    RoomStatusId: { required: "Vui lòng chọn trạng thái" }
                }
            });
        });
    </script>
}