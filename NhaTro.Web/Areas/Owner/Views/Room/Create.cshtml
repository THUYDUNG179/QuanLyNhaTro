@model NhaTro.Application.DTOs.CreateRoomDto

@{
    ViewData["Title"] = "Tạo phòng mới";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
    string motelName = ViewBag.MotelName as string ?? "Nhà trọ không xác định";
    int motelId = ViewBag.MotelId as int? ?? 0;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Tạo phòng mới cho: <span class="fw-bold">@motelName</span></h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Room" asp-area="Owner" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="MotelId" value="@motelId" />

                        <div class="mb-3">
                            <label asp-for="RoomName" class="form-label">Tên phòng</label>
                            <input asp-for="RoomName" class="form-control" placeholder="Ví dụ: Phòng 101" />
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RentalPrice" class="form-label">Giá thuê (VNĐ)</label>
                            <input asp-for="RentalPrice" type="number" min="0.01" step="0.01" class="form-control" placeholder="Ví dụ: 2500000" />
                            <span asp-validation-for="RentalPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Area" class="form-label">Diện tích (m²)</label>
                            <input asp-for="Area" type="number" min="0.01" step="0.01" class="form-control" placeholder="Ví dụ: 15.5" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomStatusId" class="form-label">Trạng thái phòng</label>
                            <select asp-for="RoomStatusId" class="form-select" asp-items="ViewBag.RoomStatuses">
                                <option disabled selected value="">-- Chọn trạng thái --</option>
                            </select>
                            <span asp-validation-for="RoomStatusId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-motelId="@motelId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu phòng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Cho phép sử dụng validation phía client-side
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
