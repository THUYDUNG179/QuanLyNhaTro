@model NhaTro.Application.DTOs.InvoiceDto
@{
    ViewData["Title"] = "Xóa hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Xóa hóa đơn</h2>
<h4>Bạn có chắc muốn xóa hóa đơn này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Hợp đồng</dt>
        <dd class="col-sm-10">@Model.ContractId</dd>
        <dt class="col-sm-2">Ngày lập</dt>
        <dt class="col-sm-2">Tổng tiền</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("N0")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="InvoiceId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
