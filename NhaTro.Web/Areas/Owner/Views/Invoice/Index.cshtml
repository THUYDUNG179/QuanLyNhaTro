@model IEnumerable<NhaTro.Application.DTOs.InvoiceDto>
@using Microsoft.AspNetCore.Routing;
@{
    ViewData["Title"] = "Danh sách Hóa đơn";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}

@{
    int? currentMotelId = ViewBag.MotelId as int?;
    int? currentContractId = ViewBag.ContractId as int?;
    string motelName = ViewBag.MotelName as string;
    string contractCode = ViewBag.ContractCode as string;

    string titleText = "Tất cả Hóa đơn";

    RouteValueDictionary backRouteValues = new RouteValueDictionary();
    backRouteValues.Add("area", "Owner");

    string backAction = "Index";
    string backController = "Motel";

    if (contractCode != null && currentContractId.HasValue)
    {
        titleText = $"Hóa đơn cho hợp đồng: {contractCode}";
        backAction = "Index";
        backController = "Contract";
        backRouteValues["controller"] = "Contract";
        backRouteValues.Add("motelId", currentMotelId ?? 0);
    }
    else if (motelName != null && currentMotelId.HasValue)
    {
        titleText = $"Hóa đơn cho nhà trọ: {motelName}";
        backAction = "Index";
        backController = "Motel";
        backRouteValues["controller"] = "Motel";
        backRouteValues.Add("motelId", currentMotelId.Value);
    }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">@titleText</h2>
    <div class="d-flex">
        @if (currentMotelId.HasValue || currentContractId.HasValue)
        {
            <a asp-action="@backAction" asp-controller="@backController" asp-area="Owner"  class="btn btn-info me-2">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        }
        <a asp-action="Create" asp-route-contractId="@currentContractId" asp-route-motelId="@currentMotelId" class="btn btn-success">
            <i class="fas fa-plus"></i> Tạo hóa đơn mới
        </a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        Chưa có hóa đơn nào.
        <a asp-action="Create" asp-route-contractId="@currentContractId" asp-route-motelId="@currentMotelId" class="alert-link">Tạo hóa đơn mới ngay!</a>
    </div>
}
else
{
    <table class="table table-hover table-bordered shadow-sm rounded-3 overflow-hidden">
        <thead class="bg-primary text-white">
            <tr>
                <th>Kỳ thanh toán <i class="fas fa-sort float-end"></i></th>
                <th>Hợp đồng <i class="fas fa-sort float-end"></i></th>
                <th>Phòng <i class="fas fa-sort float-end"></i></th> @* THÊM CỘT PHÒNG *@
                <th>Người thuê <i class="fas fa-sort float-end"></i></th> @* THÊM CỘT NGƯỜI THUÊ *@
                <th>Tổng tiền <i class="fas fa-sort float-end"></i></th>
                <th>Ngày đáo hạn <i class="fas fa-sort float-end"></i></th>
                <th>Trạng thái <i class="fas fa-sort float-end"></i></th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.BillingPeriod</td>
                    <td>@(string.IsNullOrEmpty(invoice.ContractCode) ? $"ID: {invoice.ContractId}" : invoice.ContractCode)</td>
                    <td>@(invoice.RoomName ?? "N/A")</td> @* HIỂN THỊ RoomName *@
                    <td>@(invoice.TenantName ?? "N/A")</td> @* HIỂN THỊ TenantName *@
                    <td>@invoice.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) VNĐ</td>
                    <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @{
                            string statusText = invoice.Status ?? "Không xác định";
                            string statusClass = statusText switch
                            {
                                "Pending" => "badge bg-warning text-dark",
                                "Paid" => "badge bg-success",
                                "Overdue" => "badge bg-danger",
                                "Canceled" => "badge bg-secondary",
                                _ => "badge bg-info"
                            };
                        }
                        <span class="@statusClass">@statusText</span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-info btn-sm me-1" title="Chi tiết"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@invoice.InvoiceId" class="btn btn-warning btn-sm me-1" title="Sửa"><i class="fas fa-edit"></i></a>
                            <button type="button" class="btn btn-danger btn-sm" title="Xóa" data-bs-toggle="modal" data-bs-target="#deleteInvoiceModal" data-invoice-id="@invoice.InvoiceId" data-invoice-code="@invoice.BillingPeriod">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                            @if (invoice.Status == "Pending" || invoice.Status == "Overdue")
                            {
                                <a asp-action="Create" asp-controller="Payment" asp-area="Owner" asp-route-invoiceId="@invoice.InvoiceId" class="btn btn-success btn-sm ms-1" title="Tạo thanh toán"><i class="fas fa-money-bill-alt"></i> Thanh toán</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@* Modal xác nhận xóa *@
<div class="modal fade" id="deleteInvoiceModal" tabindex="-1" aria-labelledby="deleteInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteInvoiceModalLabel">Xác nhận xóa hóa đơn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa hóa đơn "<span id="invoiceToDeleteCode" class="fw-bold text-danger"></span>" không?
                Thao tác này không thể hoàn tác.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Invoice" asp-area="Owner" method="post" id="deleteInvoiceForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="invoiceToDeleteId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteInvoiceModal = document.getElementById('deleteInvoiceModal');
        deleteInvoiceModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var invoiceId = button.getAttribute('data-invoice-id');
            var invoiceCode = button.getAttribute('data-invoice-code');

            var modalBodyInvoiceCode = deleteInvoiceModal.querySelector('#invoiceToDeleteCode');
            var modalFormInputId = deleteInvoiceModal.querySelector('#invoiceToDeleteId');

            modalBodyInvoiceCode.textContent = invoiceCode;
            modalFormInputId.value = invoiceId;
        });
    </script>
}
