@model IEnumerable<NhaTro.Application.DTOs.IncidentDto>

@{
    ViewData["Title"] = "Danh sách Sự cố";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
    string motelName = ViewBag.MotelName as string;
    string roomName = ViewBag.RoomName as string;
    int? motelId = ViewBag.MotelId as int?;
    int? roomId = ViewBag.RoomId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">Danh sách Sự cố</h2>
        @if (roomName != null)
        {
            <p class="text-muted mb-0">Phòng: <span class="fw-bold">@roomName</span></p>
        }
        else if (motelName != null)
        {
            <p class="text-muted mb-0">Nhà trọ: <span class="fw-bold">@motelName</span></p>
        }
    </div>
    <a asp-action="Create" asp-route-motelId="@motelId" asp-route-roomId="@roomId" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Tạo sự cố mới
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        Không có sự cố nào được ghi nhận.
    </div>
}
else
{
    <table class="table table-hover table-bordered shadow-sm rounded-3 overflow-hidden">
        <thead class="bg-primary text-white">
            <tr>
                <th>Tiêu đề</th>
                <th>Phòng</th>
                <th>Nhà trọ</th>
                <th>Người báo cáo</th>
                <th>Mức ưu tiên</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incident in Model)
            {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.RoomName</td>
                    <td>@incident.MotelName</td>
                    <td>@(incident.TenantName ?? incident.OwnerName)</td>
                    <td>@incident.Priority</td>
                    <td>@incident.Status</td>
                    <td>@incident.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@incident.IncidentId" class="btn btn-info btn-sm me-1" title="Chi tiết"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@incident.IncidentId" class="btn btn-warning btn-sm me-1" title="Sửa"><i class="fas fa-edit"></i></a>
                            <button type="button" class="btn btn-danger btn-sm" title="Xóa" data-bs-toggle="modal" data-bs-target="#deleteIncidentModal" data-incident-id="@incident.IncidentId" data-incident-title="@incident.Title">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteIncidentModal" tabindex="-1" aria-labelledby="deleteIncidentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteIncidentModalLabel">Xác nhận xóa sự cố</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sự cố "<span id="incidentToDeleteTitle" class="fw-bold text-danger"></span>" không?
                Thao tác này không thể hoàn tác.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Incident" method="post" id="deleteIncidentForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="incidentToDeleteId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteIncidentModal = document.getElementById('deleteIncidentModal');
        deleteIncidentModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var incidentId = button.getAttribute('data-incident-id');
            var incidentTitle = button.getAttribute('data-incident-title');

            var modalBodyIncidentTitle = deleteIncidentModal.querySelector('#incidentToDeleteTitle');
            var modalFormInputId = deleteIncidentModal.querySelector('#incidentToDeleteId');

            modalBodyIncidentTitle.textContent = incidentTitle;
            modalFormInputId.value = incidentId;
        });
    </script>
}
