@model NhaTro.Application.DTOs.CreateNotificationDto

@{
    ViewData["Title"] = "Thông báo";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h2>Gửi thông báo mới</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group mb-3">
                    <label asp-for="RelatedMotelId" class="control-label">Nhà trọ liên quan (Tùy chọn)</label>
                    <select asp-for="RelatedMotelId" class="form-control" asp-items="ViewBag.MotelId">
                        <option value="">-- Chọn nhà trọ --</option>
                    </select>
                    <span asp-validation-for="RelatedMotelId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RelatedRoomId" class="control-label">Phòng liên quan (Tùy chọn)</label>
                    <select asp-for="RelatedRoomId" class="form-control" asp-items="ViewBag.RoomId">
                        <option value="">-- Chọn phòng --</option>
                    </select>
                    <span asp-validation-for="RelatedRoomId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ReceiverUserId" class="control-label">Người nhận</label>
                    <select asp-for="ReceiverUserId" class="form-control" asp-items="ViewBag.ReceiverUserId">
                        <option value="">-- Chọn người nhận --</option>
                    </select>
                    <span asp-validation-for="ReceiverUserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group d-flex mt-4">
                    <button type="submit" class="btn btn-primary me-2">Gửi</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}