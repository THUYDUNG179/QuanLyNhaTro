@model NhaTro.Application.DTOs.NotificationDto

@{
    ViewData["Title"] = "Thông báo";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Chi tiết thông báo</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Tiêu đề:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Nội dung:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3">Người gửi:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SenderUserId)</dd>

                <dt class="col-sm-3">Người nhận:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ReceiverUserId)</dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsRead)
                    {
                        <span class="badge bg-success">Đã đọc</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Chưa đọc</span>
                    }
                </dd>

                <dt class="col-sm-3">Thời gian gửi:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3">Nhà trọ liên quan:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RelatedMotelId)</dd>

                <dt class="col-sm-3">Phòng liên quan:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RelatedRoomId)</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.NotificationId" class="btn btn-warning me-2">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>