@model NhaTro.Application.DTOs.RoleDto
@{
    ViewData["Title"] = "Chỉnh sửa vai trò";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<h2>Chỉnh sửa vai trò</h2>
<p>Cập nhật thông tin vai trò, bao gồm tên và mô tả.</p>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <div class="mb-3">
        <label asp-for="RoleName" class="form-label">Tên vai trò</label>
        <input asp-for="RoleName" class="form-control" placeholder="Nhập tên vai trò" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
