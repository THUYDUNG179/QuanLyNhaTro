
@model NhaTro.Application.DTOs.RoleDto
@{
    ViewData["Title"] = "Chi tiết vai trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chi tiết vai trò</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.RoleId</dd>
        <dt class="col-sm-2">Tên vai trò</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
