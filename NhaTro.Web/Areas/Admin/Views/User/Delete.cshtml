@model NhaTro.Application.DTOs.UserDto
@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<h2>Xóa người dùng</h2>
<p>Bạn có chắc muốn xóa người dùng này?</p>
<div>
    <dl class="row">
        <dt class="col-sm-3">Họ và tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Model.RoleName</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Xóa người dùng</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
