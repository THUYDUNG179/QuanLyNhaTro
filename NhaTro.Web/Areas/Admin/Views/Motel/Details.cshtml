@model NhaTro.Application.DTOs.MotelDto
@{
    ViewData["Title"] = "Chi tiết Nhà trọ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết Nhà trọ</h2>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.MotelName</dd>
            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Chủ sở hữu</dt>
            <dd class="col-sm-9">@Model.OwnerId</dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.MotelId" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>