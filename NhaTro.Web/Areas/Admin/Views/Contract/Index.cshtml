@model IEnumerable<NhaTro.Application.DTOs.ContractDto>
@{
    ViewData["Title"] = "Danh sách Hợp đồng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Hợp đồng</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã hợp đồng</th>
            <th>Phòng</th>
            <th>Người thuê</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Tiền cọc</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contract in Model)
        {
            <tr>
                <td>@contract.ContractId</td>
                <td>@contract.RoomId</td>
                <td>@contract.TenantId</td>
                <td>@contract.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@(contract.EndDate?.ToString("dd/MM/yyyy") ?? "Không xác định")</td>
                <td>@contract.DepositAmount)</td>
                <td>@contract.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@contract.ContractId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@contract.ContractId" class="btn btn-warning btn-sm">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@contract.ContractId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>