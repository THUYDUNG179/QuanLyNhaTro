@model NhaTro.Application.DTOs.IncidentDto
@{
    ViewData["Title"] = "Chi tiết Sự cố";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết Sự cố</h2>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã sự cố</dt>
            <dd class="col-sm-9">@Model.IncidentId</dd>
            <dt class="col-sm-3">Phòng</dt>
            <dd class="col-sm-9">@Model.RoomId</dd>
            <dt class="col-sm-3">Người thuê</dt>
            <dd class="col-sm-9">@Model.TenantId</dd>
            <dt class="col-sm-3">Tiêu đề</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Ưu tiên</dt>
            <dd class="col-sm-9">@Model.Priority</dd>
            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@Model.Status</dd>
            <dt class="col-sm-3">Hình ảnh đính kèm</dt>
            <dd class="col-sm-9">@Model.AttachedImagePath</dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-3">Ngày cập nhật</dt>
            <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</dd>
            <dt class="col-sm-3">Ngày giải quyết</dt>
            <dd class="col-sm-9">@(Model.ResolvedAt?.ToString("dd/MM/yyyy") ?? "Chưa giải quyết")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.IncidentId" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>