@model NhaTro.Application.DTOs.RoomStatusDto
@{
    ViewData["Title"] = "Xóa trạng thái phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Xóa trạng thái phòng</h2>
<h4>Bạn có chắc muốn xóa trạng thái phòng này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên trạng thái</dt>
        <dd class="col-sm-10">@Model.StatusName</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RoomStatusId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
