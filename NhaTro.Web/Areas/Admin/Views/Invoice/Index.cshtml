@model IEnumerable<NhaTro.Application.DTOs.InvoiceDto>
@{
    ViewData["Title"] = "Danh sách Hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Hóa đơn</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Hợp đồng</th>
            <th>Kỳ thanh toán</th>
            <th>Ngày đến hạn</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.ContractId</td>
                <td>@invoice.BillingPeriod</td>
                <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                <td>@invoice.TotalAmount.ToString("C")</td>
                <td>@invoice.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@invoice.InvoiceId" class="btn btn-warning btn-sm">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@invoice.InvoiceId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>